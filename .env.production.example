# /mnt/user/appdata/poolmanager/.env.production
# Complete environment variables for Unraid production deployment

# =============================================================================
# CORE APPLICATION
# =============================================================================
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://poolmanager:your_secure_password_here@postgresql16:5432/poolmanager

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
NEXTAUTH_SECRET=your-32-char-random-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://pm.jnew.us

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# =============================================================================
# SPORTS DATA PROVIDERS
# =============================================================================
# MySportsFeeds (Premium injury data) - OPTIONAL
# Leave blank to use ESPN fallback only
MYSPORTSFEEDS_API_KEY=
MYSPORTSFEEDS_PASSWORD=

# ESPN (Free - no keys needed, but can set user agent)
ESPN_USER_AGENT=PoolManager/1.0

# OpenWeather (Weather data)
OPENWEATHER_API_KEY=your-openweather-api-key

# =============================================================================
# REDIS CACHING
# =============================================================================
REDIS_URL=redis://Redis:6379

# =============================================================================
# SECURITY & MONITORING
# =============================================================================
# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# CORS origins (your domain)
CORS_ORIGIN=https://pm.jnew.us

# =============================================================================
# BACKUP & STORAGE
# =============================================================================
# Local backup directory (mounted volume)
BACKUP_DIR=/app/backups

# =============================================================================
# LOGGING & DEBUGGING
# =============================================================================
LOG_LEVEL=info
DEBUG=false

# =============================================================================
# OPTIONAL: EMAIL (if implementing notifications)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@pm.jnew.us

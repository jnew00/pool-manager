# PoolManager Staging Environment Configuration
# Staging environment for testing production-like conditions

# Database Configuration
DATABASE_URL="postgresql://staging_user:staging_password@staging-db.example.com:5432/poolmanager_staging"
DIRECT_URL="postgresql://staging_user:staging_password@staging-db.example.com:5432/poolmanager_staging"

# Next.js Configuration
NODE_ENV="production"
NEXTAUTH_URL="https://staging.poolmanager.app"
NEXTAUTH_SECRET="staging-secret-32-characters-minimum"

# NFL Data APIs (using test/development endpoints where possible)
ESPN_API_BASE_URL="https://site.api.espn.com/apis/site/v2/sports/football/nfl"
ESPN_API_TIMEOUT="10000"
MYSPORTSFEEDS_API_KEY="test-api-key-for-staging"
MYSPORTSFEEDS_API_URL="https://api.mysportsfeeds.com/v2.1/pull/nfl"

# Caching & Performance
REDIS_URL="redis://redis-staging.example.com:6379"
CACHE_TTL_HOURS="2"
ENABLE_CACHING="true"

# API Configuration
RATE_LIMIT_PER_MINUTE="120"
API_TIMEOUT_MS="10000"
MAX_RETRIES="2"

# Logging & Monitoring
LOG_LEVEL="debug"
ENABLE_API_LOGGING="true"
SENTRY_DSN="https://your-staging-sentry-dsn@sentry.io/staging-project-id"

# Security
CORS_ORIGIN="https://staging.poolmanager.app"
API_RATE_LIMIT="true"
SECURE_HEADERS="true"

# Feature Flags
ENABLE_REAL_DATA="true"
ENABLE_INJURY_ANALYSIS="true"
ENABLE_SCHEDULE_ANALYSIS="true"
ENABLE_MOCK_DATA_FALLBACK="true"

# Staging-specific settings
ENABLE_DEBUG_LOGS="true"
SHOW_DATA_SOURCE_INDICATORS="true"
ALLOW_TEST_DATA="true"